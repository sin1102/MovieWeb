
@{
    ViewBag.Title = "WatchMovie";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style>
    .ep-button {
        display: inline-flex;
        background: #FF8D1B;
        width: 50px;
        color: white;
        border: none;
        outline: none;
        border-radius: 5px;
        overflow: hidden;
    }

        .ep-button:hover {
            background: #808080;
        }
</style>

<div class="container">
    <iframe style="margin-top:20px" width="1140" height="570" src="@Model.Url" title="@Model.MovieName" frameborder="0" allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    <h2 style="color:black; font-weight:bold">@Model.MovieName</h2>
    <ul class="w3l-ratings" style="margin-bottom:10px">
        <li><p style="margin-right:10px">28/9/2020</p></li>
        <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
        <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
        <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
        <li><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></li>
        <li><a href="#"><i class="fa fa-star-half-o" aria-hidden="true"></i></a></li>
    </ul>
    @*<button type="button" class="ep-button">01</button>
    <button type="button" class="ep-button">02</button>
    <button type="button" class="ep-button">03</button>
    <button type="button" class="ep-button">04</button>
    <button type="button" class="ep-button">05</button>*@
    <div class="all-comments">
        <div class="all-comments-info">
            <a href="#">Comments</a>
            <div class="agile-info-wthree-box">
                <form>
                    <textarea placeholder="Message" required=""></textarea>
                    <input type="submit" value="SEND">
                    <div class="clearfix"> </div>
                </form>
            </div>
        </div>
        @*<div class="media-grids">
                @Html.Action("Comment", "Home")
            </div>*@
    </div>

    <div class="banner-bottom">
        <h3 style="color:#ff6a00">Recommendation</h3>
        <div class="w3_agile_banner_bottom_grid">
            <div id="owl-demo" class="owl-carousel owl-theme">
                @Html.Action("Recommendation", "Home", new {id = Model.MovieID})
            </div>
        </div>
    </div>
</div>