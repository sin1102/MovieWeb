
@foreach (var item in Model)
{
    <li>
        <div class="agile_tv_series_grid">
            <div class="col-md-6 agile_tv_series_grid_left">
                <div class="w3ls_market_video_grid1">
                    <a href="@Url.Action("Details","Home",new { id = item.MovieID})">
                    <img src="@item.MovieImage" style="width:600px; height:351px; background-size:cover" class="img-responsive" />
                        <span class="glyphicon glyphicon-play-circle" aria-hidden="true"></span>
                    </a>
                </div>
            </div>

            <div class="col-md-6 agile_tv_series_grid_right" style="height:351px">
                <p class="fexi_header">@item.MovieName</p>
                <p class="fexi_header_para" style="overflow: hidden; text-overflow: ellipsis; line-height: 20px; -webkit-line-clamp: 4; display: -webkit-box; -webkit-box-orient: vertical"><span class="conjuring_w3">Story Line<label>:</label></span>@item.Description</p>
                <p class="fexi_header_para"><span>Date of Release<label>:</label></span>@item.ReleaseDate.ToString().Split(' ')[0]</p>
                <p class="fexi_header_para">
                    <span>Type<label>:</label> </span><a>@item.Type</a>
                </p>
                <p class="fexi_header_para">
                    <span>Genres<label>:</label> </span><a>@item.GenreName</a>
                </p>
                <p class="fexi_header_para fexi_header_para1">
                    <span>Star Rating<label>:</label></span>
                    <a href="#"><i class="fa fa-star" aria-hidden="true"></i></a>
                    <a href="#"><i class="fa fa-star" aria-hidden="true"></i></a>
                    <a href="#"><i class="fa fa-star-half-o" aria-hidden="true"></i></a>
                    <a href="#"><i class="fa fa-star-o" aria-hidden="true"></i></a>
                    <a href="#"><i class="fa fa-star-o" aria-hidden="true"></i></a>
                </p>
            </div>
            <div class="clearfix"> </div>
        </div>
    </li>
}

